&CONTROL
  calculation = 'relax'    
  forc_conv_thr =  5.0e-4 
  etot_conv_thr = 1.0e-5  
  max_seconds   =  1.72800e+05 
  nstep         = 100          
  pseudo_dir = '/home/ys/qepseudo/SSSP_1.3.0_PBE_efficiency' 
  outdir = './tmp'
  restart_mode = 'from_scratch' 
  prefix = 'H2O'  
  tprnfor = .true.        
  tstress = .true.       
  verbosity = 'high' 
/

&SYSTEM
    a           =  2.50000e+01
    ecutwfc = 40.0     
    ecutrho = 280.0   
    ibrav       = 1
    nat         = 3
    ntyp        = 2
    occupations = 'smearing'
    smearing = 'mv'     
    degauss = 0.02      
    nosym = .TRUE.
/

&ELECTRONS
  conv_thr = 1e-6        
  electron_maxstep = 200
  mixing_beta = 0.4   
  diagonalization = 'david'  
  startingwfc = "atomic+random"
  startingpot = "atomic"
/

&IONS
    ion_dynamics = "bfgs"
/

&CELL
  cell_dofree = 'all'   
/

